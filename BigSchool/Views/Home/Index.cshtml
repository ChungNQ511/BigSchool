@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    <ul class="course" style="list-style:none;">
        @foreach(var course in Model)
        {
            <li style="position:relative;    margin-bottom:30px;">
                <div class="date" style="text-align:center;    background-color:coral;    color:black;    width:60px;    border-radius:8px;">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details" style="position:absolute;    top:0;    left:70px;">
                    <span class="lecturer">
                        @course.Lecturer.Name
                    </span>
                    <span class="category">
                        @course.Category.Name
                    </span>
                    <button data-course-id="@course.Id" class="btn btn-default btn-sm js-toggle-attendance">Going?
                    </button>
                </div>
            </li>
        }
    </ul>
</div>
@section scripts
{
    <script>
        $(document).ready(function ()
        {
            $(".js-toggle-attendance").click(function(e){
            var button =$(e.target);
                $.post("/api/attendances",{courseId:button.attr("data-course-id")})
                .done(function(){
                    button
                        .removeClass("btn-default")
                    .addClass("btn-info")
                    .text("Going");
                })
                .fail(function(){
                    alert("Something failed!");
                });
            });
        });
    </script>
    }